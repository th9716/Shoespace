}
@section Style{
   <link href="~/css/HomePage.css" rel="stylesheet">    
    <style>
        .sectionCenter {
        margin-left: auto;
         margin-right: auto;
         width: 45em;
        }
        .sectiondiv_01{
        margin-bottom:2em;
        }
       button {
        background-color:#DA7173;
        }
    </style>    
}
    <section class="collection g-container">
        <div class="sectionCenter">
            <div class="sectiondiv_01">
                <div class="sectiondiv_01">
                    <h3>品牌吉祥物推廣小遊戲</h3>
                </div>                
                <div class ="sectiondiv_01">
                    親愛的顧客您好:
                </div class="sectiondiv_01" >
