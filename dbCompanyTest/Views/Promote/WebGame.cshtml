        </div>
        <div lass="sectionCenter" align="center">
            <iframe id="iframe" width="1000" height="700" src=""></iframe>
        </div>       
     </section>

    @section Scripts{
    <script>
        $("#Go").on('click', function () {
            $(this).text("重新開始");
            $('#iframe').attr('src', "https://skylin8012.github.io/ShoespaceWebGame/");
            
        });



